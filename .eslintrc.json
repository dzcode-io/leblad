{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:sonarjs/recommended"
  ],
  "plugins": [
    "prettier",
    "sonarjs"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": "error",
    "no-tabs": "off",
    "indent": "error",
    "no-underscore-dangle": "off",
    "no-trailing-spaces": "error",
    "comma-spacing": "error",
    "quote-props": "error",
    "key-spacing": "error"
  },
  "overrides": [
    {
      "files": [
        "**/tests/**/*.test.js"
      ],
      "rules": {
        "global-require": "off"
      }
    }
  ]
}